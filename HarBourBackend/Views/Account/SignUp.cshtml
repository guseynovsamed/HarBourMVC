@model RegisterVM


@{
    Layout = null;
}




<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Harbour Yachting</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css"
          integrity="sha512-sMXtMNL1zRzolHYKEujM2AqCLUR9F2C4/05cdbxjjLSRvMQIciEPCQZo++nk7go3BtSuK9kfa/s+a4f4i5pLkw=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="~/assets/css/register.css" />
    <link rel="icon" href="~/assets/img/favicon.png" />
</head>





<!-- Preloader -->
<div class="preloader-bg"></div>
<div id="preloader">
    <div id="preloader-status">
        <div class="preloader-position loader"> <span></span> </div>
    </div>
</div>





<main>
    <div class="header-video">
        <video src="~/assets/img/cutvideo.mp4"
               type=""
               playsinline
               autoplay
               loop
               muted></video>
    </div>
    <div class="register">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12">
                    <div class="wrap cover-img d-md-flex">
                        <div class="img"
                             style="background-image: url('/assets/img/sailing-yachts03.jpg')"></div>
                        <div class="login-wrap p-4 p-md-5">
                            <div class="d-flex flex-column">
                                <div class="w-100">
                                    <h3 class="mb-4">Sign Up</h3>
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                </div>
                            </div>
                            <form method="post" asp-action="SignUp" class="signin-form">
                                <div class="form-group mb-3">
                                    <input asp-for="FullName" type="text"
                                           class="form-control"
                                           placeholder="Fullname" />
                                    <span class="text-danger" asp-validation-for="FullName"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <input asp-for="UserName" type="text"
                                           class="form-control"
                                           placeholder="Username" />
                                    <span class="text-danger" asp-validation-for="UserName"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <input asp-for="Email" type="text"
                                           class="form-control"
                                           placeholder="Email" />
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <input asp-for="Password" type="password"
                                           id="password"
                                           class="form-control"
                                           placeholder="Password" />
                                    <i id="eye" class="fa-regular fa-eye"></i>
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <input asp-for="ConfirmPassword" type="password"
                                           id="password"
                                           class="form-control"
                                           placeholder="Confirm Password" />
                                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                </div>
                                <div class="form-group">
                                    <button type="submit"
                                            class="form-control btn btn-primary rounded submit px-3">
                                        Sign Up
                                    </button>
                                </div>
                            </form>
                            <p class="mt-5 text-center">
                                Not a member?
                                <a data-toggle="tab" class="bt-signin" asp-action="SignIn">Sign In</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>




<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="~/assets/js/register.js"></script>
<script src="https://kit.fontawesome.com/15e4433beb.js"
        crossorigin="anonymous"></script>