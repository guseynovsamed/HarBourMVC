@model HeaderVM

<header>

    <div class="preloader-bg"></div>
    <div id="preloader">
        <div id="preloader-status">
            <div class="preloader-position loader"> <span></span> </div>
        </div>
    </div>
    <div class="progress-wrap cursor-pointer active-progress">
        <svg class="progress-circle svg-content"
             width="100%"
             height="100%"
             viewBox="-1 -1 102 102">
            <path d="M50,1 a49,49 0 0,1 0,98 a49,49 0 0,1 0,-98"
                  style="
            transition: stroke-dashoffset 10ms linear 0s;
            stroke-dasharray: 307.919, 307.919;
            stroke-dashoffset: 307.919;
          "></path>
        </svg>
    </div>
    <!-- navbar start -->
    <div class="color-back navbar">
        <div class="container">
            <div class="col-4">
                <div class="header-logo">
                    <img src="~/assets/img/logo-light.png" alt="" />
                </div>
            </div>
            <div class="col-8">
                <div class="header-menu">
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="About" asp-action="Index">About</a></li>
                        <li><a asp-controller="Yacht" asp-action="Index">Yachts</a></li>
                        <li><a asp-controller="Destination" asp-action="Index">Destination</a></li>
                        <li><a asp-controller="Watersport" asp-action="Index">Watersports</a></li>
                        <li><a asp-controller="Blog" asp-action="Index">Blog</a></li>
                        <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                        <li class="login">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <a asp-controller="Account" asp-action="SignIn">
                                    Login<i class="fa-solid fa-arrow-right-to-bracket"></i>
                                </a>
                            }
                            else
                            {
                        <form method="post" style="display:flex" asp-controller="Account" asp-action="LogOut">
                            <button type="submit" style="border:none; font-size:14px; color:white;  background-color:transparent">
                                Logout <i class="fa-solid fa-right-from-bracket"></i>
                            </button>
                            <span style="color:white;">@User.Identity.Name</span>
                        </form>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</header>

