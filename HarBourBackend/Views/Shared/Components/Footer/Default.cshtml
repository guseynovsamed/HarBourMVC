                                <i class="fa-solid fa-phone"></i>
                            </div>
                        </div>
                        <div class="text">
                            <h6>Call us</h6>
                            <p>@Model.Settings["Phone"]</p>
                        </div>
                    </div>
                    <div class="line"></div>
                    <div class="contact-infos">
                        <div class="icon">
