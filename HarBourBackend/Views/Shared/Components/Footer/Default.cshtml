                            <p>@Model.Settings["Email"]</p>
                        </div>
                    </div>
                    <div class="line"></div>
                    <div class="contact-infos">
                        <div class="icon">
                            <div class="icon-footer">
                                <i class="fa-solid fa-map-location"></i>
                            </div>
                        </div>
                        <div class="text">
                            <h6>Address</h6>
                            <p>@Model.Settings["Address"]</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-center">
            <div class="col-md-4">
