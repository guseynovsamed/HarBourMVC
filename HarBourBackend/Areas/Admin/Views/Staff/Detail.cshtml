@model StaffDetailVM

<div class="container mt-5 px-5">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="border-top-0">Fullname</th>
                    <th class="border-top-0">Phone</th>
                    <th class="border-top-0">Mail</th>
                    <th class="border-top-0">Description</th>
                    <th class="border-top-0">Biography</th>
                    <th class="border-top-0">Awards</th>
                    <th class="border-top-0">Position</th>
                    <th class="border-top-0">Education</th>
                    <th class="border-top-0">Image</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="txt-oflo">
                        <h6>@Model.Fullname</h6>
                    </td>
                    <td class="txt-oflo">
                        <h6>@Model.Phone</h6>
                    </td>
                    <td class="txt-oflo">
                        <h6>@Model.Mail</h6>
                    </td>
                    <td class="txt-oflo">
                        <h6>@Model.Description</h6>
                    </td>
                    <td class="txt-oflo">
                        <h6>@Model.Biography</h6>
                    </td>
                    <td class="txt-oflo">
                        <h6>@Model.Awards</h6>
                    </td>
                    <td class="txt-oflo">
                        <h6>@Model.Position</h6>
                    </td>
                    <td class="txt-oflo">
                        <h6>@Model.Education</h6>
                    </td>
                    <td class="txt-oflo">
                        <img style="width:100px; height:auto;" ; src="~/assets/img/@Model.Image" />
                    </td>
                </tr>
            <tbody>
        </table>
    </div>
    <div class="form-group mt-3">
        <div class="col-sm-12">
            <a asp-action="Index" class="btn btn-primary">Back</a>
        </div>
    </div>

</div>