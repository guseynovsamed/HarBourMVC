@model List<CommentAdminVM>


<div class="container mt-5 px-5">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="border-top-0">UserFullName</th>
                    <th class="border-top-0">UserEmail</th>
                    <th class="border-top-0">BlogTitle</th>
                    <th class="border-top-0">PostDate</th>
                    <th class="border-top-0">Comment</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="txt-oflo">
                            <h6>@item.UserFullName</h6>
                        </td>
                        <td class="txt-oflo">
                            <h6>@item.UserEmail</h6>
                        </td>
                        <td class="txt-oflo">
                            <h6>@item.BlogTitle</h6>
                        </td>
                        <td class="txt-oflo">
                            <h6>@item.PostDate</h6>
                        </td>
                        <td class="txt-oflo">
                            <h6>@item.Comment</h6>
                        </td>
                        <td>
                            <form class="form-horizontal d-inline mt-4" method="post" asp-action="Delete" asp-route-id="@item.Id">
                                <button type="submit" class="btn btn-danger text-white">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            <tbody>
        </table>
    </div>
</div>