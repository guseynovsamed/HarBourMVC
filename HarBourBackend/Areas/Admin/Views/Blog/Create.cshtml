@model BlogCreateVM

<div class="container mt-5 px-5">
    <form class="form-horizontal form-material mx-2" method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label class="col-md-12" style="font-weight:700">Blog</label>
            <div style="display:flex; flex-direction:column; row-gap:5px;" class="col-md-12 mt-3">
                <label>Title</label>
                <input autocomplete="off" asp-for="Title" type="text" placeholder="Title..." class="form-control form-control-line" />
                <span class="text-danger" asp-validation-for="Title"></span>

                <label>Description</label>
                <input autocomplete="off" asp-for="Description" type="text" placeholder="Description..." class="form-control form-control-line" />
                <span class="text-danger" asp-validation-for="Description"></span>

                <label>Content</label>
                <input autocomplete="off" asp-for="Content" type="text" placeholder="Content..." class="form-control form-control-line" />
                <span class="text-danger" asp-validation-for="Content"></span>

                <label>BackgroundImage</label>
                <input asp-for="BackgroundImage" class="form-control form-control-line" />
                <span class="text-danger" asp-validation-for="BackgroundImage"></span>

                <label>Image</label>
                <input asp-for="Image" class="form-control form-control-line" />
                <span class="text-danger" asp-validation-for="Image"></span>
            </div>
        </div>
        <div class="form-group mt-3">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-success">Submit</button>
                <a asp-action="Index" class="btn btn-primary">Back</a>
            </div>
        </div>
    </form>
</div>

