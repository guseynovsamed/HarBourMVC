@model BlogDetailVM

<div class="container mt-5 px-5">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="border-top-0">Title</th>
                    <th class="border-top-0">Content</th>
                    <th class="border-top-0">Description</th>
                    <th class="border-top-0">CreateDate</th>
                    <th class="border-top-0">Image</th>
                    <th class="border-top-0">Background</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="txt-oflo">
                        <h6>@Model.Title</h6>
                    </td>
                    <td class="txt-oflo">
                        <h6>@Model.Content</h6>
                    </td>
                    <td class="txt-oflo">
                        <h6>@Model.Description</h6>
                    </td>
                    <td class="txt-oflo">
                        <h6>@Model.CreateDate.ToString("dd/MMM/yyyy")</h6>
                    </td>
                    <td class="txt-oflo">
                        <img style="width:100px; height:auto;" ; src="~/Admin/assets/img/@Model.BackgroundImage" />
                    </td>

                    <td class="txt-oflo">
                        <img style="width:100px; height:auto;" ; src="~/Admin/assets/img/@Model.Image" />
                    </td>
                </tr>
            <tbody>
        </table>
    </div>
    <div class="form-group mt-3">
        <div class="col-sm-12">
            <a asp-action="Index" class="btn btn-primary">Back</a>
        </div>
    </div>

</div>