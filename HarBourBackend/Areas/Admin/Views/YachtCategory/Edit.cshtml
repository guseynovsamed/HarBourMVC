@model YachtCategoryEditVM

<div class="container mt-5 px-5">
    <form class="form-horizontal form-material mx-2" method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group">
            <label class="col-md-12" style="font-weight:700">Slider Info</label>
            <div style="display:flex; flex-direction:column; row-gap:5px;" class="col-md-12 mt-3">
                <table>Name</table>
                <input autocomplete="off" asp-for="Name" type="text" maxlength="100" placeholder="TopTitle..." class="form-control form-control-line" />
                <span class="text-danger" asp-validation-for="Name"></span>
                <table>Description</table>
                <input autocomplete="off" asp-for="Description" type="text" maxlength="100" placeholder="MainTitle..." class="form-control form-control-line" />
                <span class="text-danger" asp-validation-for="Description"></span>
                <table>IconImage</table>
                <input asp-for="NewIconImage" class="form-control form-control-line" />
                <span class="text-danger" asp-validation-for="NewIconImage"></span>
            </div>
        </div>
        <div class="form-group mt-3">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-success">Submit</button>
                <a asp-action="Index" class="btn btn-primary">Back</a>
            </div>
        </div>
    </form>
</div>

