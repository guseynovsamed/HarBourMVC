@model CityCreateVM

<div class="container mt-5 px-5">
    <form class="form-horizontal form-material mx-2" method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label class="col-md-12" style="font-weight:700">Destination Create</label>
            <div style="display:flex; flex-direction:column; row-gap:5px;" class="col-md-12 mt-3">
                <label>Day</label>
                <input autocomplete="off" asp-for="AccommodationDay" type="number" maxlength="100" placeholder="AccommodationDay..." class="form-control form-control-line" />
                <span class="text-danger" asp-validation-for="AccommodationDay"></span>

                <label>Departure</label>
                <input autocomplete="off" asp-for="Departure" type="text" maxlength="100" placeholder="Departure..." class="form-control form-control-line" />
                <span class="text-danger" asp-validation-for="Departure"></span>

                <label>Description</label>
                <input autocomplete="off" asp-for="Description" type="text" maxlength="100" placeholder="Description..." class="form-control form-control-line" />
                <span class="text-danger" asp-validation-for="Description"></span>

                <label>MaxLimit</label>
                <input autocomplete="off" asp-for="MaxLimit" type="number" maxlength="100" placeholder="MaxLimit..." class="form-control form-control-line" />
                <span class="text-danger" asp-validation-for="MaxLimit"></span>

                <label>MinLimit</label>
                <input autocomplete="off" asp-for="MinLimit" type="number" maxlength="100" placeholder="MinLimit..." class="form-control form-control-line" />
                <span class="text-danger" asp-validation-for="MinLimit"></span>

                <label>Name</label>
                <input autocomplete="off" asp-for="Name" type="text" maxlength="100" placeholder="Name..." class="form-control form-control-line" />
                <span class="text-danger" asp-validation-for="Name"></span>


                <label>Price</label>
                <input autocomplete="off" asp-for="Price" type="number" maxlength="100" placeholder="Price..." class="form-control form-control-line" />
                <span class="text-danger" asp-validation-for="Price"></span>


                <label>Country</label>
                <select class="form-control mt-3" asp-for="CountryId" asp-items="@ViewBag.country">
                </select>


                <label>BackgroundImage</label>
                <input asp-for="BackgroundImage" class="form-control form-control-line" />
                <span class="text-danger" asp-validation-for="BackgroundImage"></span>

                <label>DestinationImages</label>
                <input asp-for="DestinationImages" class="form-control form-control-line" />
                <span class="text-danger" asp-validation-for="DestinationImages"></span>
            </div>
        </div>
        <div class="form-group mt-3">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-success">Submit</button>
                <a asp-action="Index" class="btn btn-primary">Back</a>
            </div>
        </div>
    </form>
</div>

