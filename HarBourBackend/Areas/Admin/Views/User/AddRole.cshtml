@model AddRoleVM

<div class="container mt-5 px-5">
    <form class="form-horizontal form-material mx-2" method="post" asp-controller="User" asp-action="AddRole">
        <div class="form-group">
            <label class="col-md-12" style="font-weight:700">About</label>
            <div class="col-md-12 mt-3">
                <tbody>
                    
                    <tr>
                        <td class="txt-oflo">
                            <select class="form-control mt-3" asp-for="UserId" asp-items="@ViewBag.users">
                            </select>

                        </td>
                        <td class="txt-oflo">
                            <select class="form-control mt-3" asp-for="RoleId" asp-items="@ViewBag.roles">
                            </select>
                    </tr>
                <tbody>
            </div>
        </div>
        <div class="form-group mt-3">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-success">Update Role</button>
                <a asp-action="Index" class="btn btn-primary">Back</a>
            </div>
        </div>
    </form>
</div>

