@model WaterSportCreateVM

<div class="container mt-5 px-5">
    <form class="form-horizontal form-material mx-2" method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label class="col-md-12" style="font-weight:700">Watersport</label>
            <div style="display:flex; flex-direction:column; row-gap:5px;" class="col-md-12 mt-3">
                <label>Name</label>
                <input autocomplete="off" asp-for="Name" type="text"  placeholder="Name..." class="form-control form-control-line" />
                <span class="text-danger" asp-validation-for="Name"></span>

                <label>Description</label>
                <input autocomplete="off" asp-for="Description" type="text"  placeholder="Description..." class="form-control form-control-line" />
                <span class="text-danger" asp-validation-for="Description"></span>

                <label>Price</label>
                <input autocomplete="off" asp-for="Price" type="number"  placeholder="Price..." class="form-control form-control-line" />
                <span class="text-danger" asp-validation-for="Price"></span>

                <label>Policy</label>
                <input autocomplete="off" asp-for="Policy" type="text"  placeholder="Policy..." class="form-control form-control-line" />
                <span class="text-danger" asp-validation-for="Policy"></span>

                <label>Information</label>
                <input autocomplete="off" asp-for="Information" type="text"  placeholder="Information..." class="form-control form-control-line" />
                <span class="text-danger" asp-validation-for="Information"></span>


                <label>BackgroundImage</label>
                <input asp-for="BackgroundImage" class="form-control form-control-line" />
                <span class="text-danger" asp-validation-for="BackgroundImage"></span>

                <label>SportImages</label>
                <input asp-for="SportImages" class="form-control form-control-line" />
                <span class="text-danger" asp-validation-for="SportImages"></span>
            </div>
        </div>
        <div class="form-group mt-3">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-success">Submit</button>
                <a asp-action="Index" class="btn btn-primary">Back</a>
            </div>
        </div>
    </form>
</div>

